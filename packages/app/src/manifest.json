{
	"name": "Blockstack",
	"author": "ymdevs",
	"version": "1.0.0",
	"description": "The Blockstack app is all you need to access the new internet. Access privacy-friendly apps and keep data in your control.",
	"icons": {
		"128": "assets/logo-128@1x.png",
		"256": "assets/logo-128@2x.png",
		"512": "assets/logo-128@3x.png"
	},
	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
	"permissions": [
		"activeTab",
		"alarms",
		"bookmarks",
		"cookies",
		"storage",
		"tabs",
		"webRequest",
		"webRequestBlocking",
		"*://*/*"
	],
	"manifest_version": 2,
	"background": {
		"scripts": [
			"background.js"
		],
		"persistent": true
	},
	"web_accessible_resources": ["inpage.js"],
	"browser_action": {
		"default_title": "Blockstack",
		"default_icon": "assets/logo-16@3x.png",
		"default_popup": "popup.html"
	},
	"options_ui": {
		"page": "index.html",
		"open_in_tab": true
	},
	"content_scripts": [
		{
			"js": ["message-bus.js"],
			"matches": ["*://*/*"]
		}
	]
}